<!DOCTYPE html>
<html>
  <head>
    <title>New Sails App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/importer.css">
    <link rel="stylesheet" href="/styles/style.css">
    <!--STYLES END-->
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="navbar-header col-sm-12">
        <div class="navbar-header">
          <a href="/" class="navbar-brand">Test Chat</a>
        </div>
        <%if(user){%>
          <div class="loged-user">
            Welcome <%= user.username %>
            &nbsp;|&nbsp;
            <a href="/logout" class="js-logout">Logout</a>
          </div>
        <%}else{%>
          <ul class="nav navbar-nav col-sm-4">
            <li><a href="register">Register</a></li>
          </ul>
          <form class="col-sm-4 login" action="/login" method="post">
            <div class="col-sm-5">
              <input class="form-control" id="username" type="text" value="" placeholder="Login" name="username">
            </div>
            <div class="col-sm-5">
              <input class="form-control" id="password" type="password" value="" placeholder="Password" name="password">
            </div>
            <input type="submit" value="Login" class="btn btn-default col-sm-2">
          </form>
        <%}%>
      </div>
    </nav>

    <div class="wrapper">
      <%- body %>
    </div>

    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/dependencies/jquery.js"></script>
    <script src="/js/dependencies/moment.min.js"></script>
    <script src="/js/dependencies/underscore-min.js"></script>
    <script src="/js/app.js"></script>
    <!--SCRIPTS END-->
  </body>
</html>
